{
  "version": 2,
  "builds": [
    {
      "src": "sol_front.py",
      "use": "@vercel/streamlit",
      "config": {
        "maxLambdaSize": "250mb",
        "useStaticBuild": true
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://sol-social-backend.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "sol_front.py"
    }
  ],
  "functions": {
    "sol_front.py": {
      "memory": 3008,
      "maxDuration": 60,
      "includeFiles": "assets/**"
    }
  }
}
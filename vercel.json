{
  "version": 2,
  "builds": [
    {
      "src": "frontend/sol_front.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "50mb",
        "installCommand": "pip install -r frontend/requirements_vercel.txt && streamlit config show > frontend/config.toml",
        "includeFiles": ["frontend/config.toml"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/sol_front.py",
      "methods": ["GET", "POST", "OPTIONS"]
    }
  ]
}
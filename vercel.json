{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "sol_frontend.py",
      "use": "@vercel/streamlit",
      "config": {
        "maxLambdaSize": "250mb",
        "useStaticBuild": true
      }
    }
  ],
  "functions": {
    "api/main.py": {
      "memory": 1024,
      "maxDuration": 30
    },
    "sol_frontend.py": {
      "memory": 3008,
      "maxDuration": 60,
      "includeFiles": "assets/**"
    }
  }
}